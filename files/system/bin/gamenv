#!/bin/bash

# gamenv: Launch a game with both PRIME offload and GameMode optimizations.

# Set the wrapper command for GameMode to include PRIME offload environment
export GAMEMODERUNEXEC="env __NV_PRIME_RENDER_OFFLOAD=1 __GLX_VENDOR_LIBRARY_NAME=nvidia __VK_LAYER_NV_optimus=NVIDIA_only VK_ICD_FILENAMES=/usr/share/vulkan/icd.d/nvidia_icd.json"

# Launch the game with gamemoderun, which will use GAMEMODERUNEXEC internally
gamemoderun "$@"
